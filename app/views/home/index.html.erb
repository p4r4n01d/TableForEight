<main class="container">
	<div id="eventRefresh">

		<section class="row" id="home">
			<div class="img-background "></div>
			<article class="col-md-4 headerimg">
				<%= image_tag("Table-For-Eight-logo.png", :class => "img-responsive headerimg logo-padding") %>
				<header>
					<h1>Plan. Dine. Socialise.</h1>
					<br />
				</header>
			</article>
		</section>
	
		<section class="row offset darker-background" id="what">
			<article class="center-section dynamic-height">
				<h2>
					<i class="glyphicon glyphicon-info-sign service-icon"></i> What?
				</h2>

				<h3>What is <span class="title-font">Table for Eight?</span></h3>
				<p>
					Table for Eight is an interactive app that takes the hassle and stress out of planning a dining experience with your mates.
				</p>
				<p>
					Invite your guests, and they'll help you plan this out by voting for their preferences later.
				</p>
				<p>
					Sounds good? Just follow these <b>three</b> steps:
					<dl id="num-list">
						<dt>Who?</dt>
						<dd>Friends! Add 'em to the guest list.
						Oh, and don't forget to tell them who you are!</dd>

						<dt>Where?</dt>
						<dd>Let's choose where to eat! List up to five restaurants.</dd>

						<dt>When?</dt>
						<dd>Sunday brunch, weekday lunch, or Friday dinner? Select up to three dates and times.</dd>
					</dl>
				</p>
			</article>
		</section>

		<form>
			<section class="row offset lighter-background" id="who">
				<article class="center-section dynamic-height">
					<h2>
						<i class="glyphicon glyphicon-list-alt service-icon"></i> Who?
					</h2>
					<!--<button onclick="hello('facebook').login()">facebook</button><br /><br />-->

					<%= render partial: "who", :locals => { :label_title => "Name",
						:span_class => "user",
						:placeHolder => "What's your name?",
						:modelName => "organiser_name" } %>
					<%= render partial: "who", :locals => { :label_title => "Email",
						:span_class => "envelope",
						:placeHolder => "What's your email?",
						:modelName => "organiser_email" } %>
					<%= render partial: "who", :locals => { :label_title => "Guest List",
						:placeHolder =>"List down your friends' email here.",
						:modelName => "guest_list" } %>
				</article>
			</section>

			<section class="row offset darker-background" id="where">
				<article class="center-section dynamic-height">
					<h2>
						<i class="glyphicon glyphicon-cutlery service-icon"></i> Where?
					</h2>
					<% (1..5).each do |i| %>
						<label class="control-label spacingAround">{{ event.name<%= i %> }}</label>
						<div class="input-group spacingAround">
							<span class="input-group-addon glyphicon glyphicon-globe"></span>
							<input type="url" class="form-control letterSpacingFonts" <% if (i == 1) %> required <% end %>  placeholder="What's the restaurant's website?" ng-model="event.link<%= i %>"/>
						</div>
					<% end %>
				</article>
			</section>

			<section class="row offset lighter-background" id="when">
				<article class="center-section dynamic-height">
					<h2>
						<i class="glyphicon glyphicon-calendar service-icon"></i> When?
					</h2>
					<% (1..3).each do |i| %>
						<div class="form-group">
							<label for="dtp_input<%= i %>" class="control-label">Tentative date and time <%= i %></label>
							<div class="input-group date form_datetime" data-date-format="dd MM yyyy - HH:ii p" data-link-field="dtp_input<%= i %>">
								<span class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span></span>
								<input class="form-control" size="16" <% if (i == 1) %> required <% end %>  placeholder="dd mm yyyy - hh:mm p" ng-model="event.date<%= i %>">
								<span class="input-group-addon"><span class="glyphicon glyphicon-remove"></span></span>
							</div>
							<input type="hidden" id="dtp_input<%= i %>" value="" />
						</div>
					<% end %>
					<div class="form-group"><br /><br />
						<label for="dtp_input4" class="control-label">Vote before</label>
						<div class="input-group date form_datetime cusorhand" data-date-format="dd MM yyyy - HH:ii p" data-link-field="dtp_input4">
							<span class="input-group-addon"><span class="glyphicon glyphicon-calendar cusorhand"></span></span>
							<input class="form-control" size="16" required type="text" placeholder="dd mm yyyy - hh:mm p" ng-model="event.cutoff_at">
							<span class="input-group-addon"><span class="glyphicon glyphicon-remove"></span></span>
						</div>
						<input type="hidden" id="dtp_input4" value="" />
						<p>
							* This is the deadline for your guests to vote for their preferences.
						</p>
					</div>
				</article>
			</section>

			<section class="row offset darker-background" id="go">
				<article class="center-section offset-bot">

					<div class="half-col">
						<h2>
							<i class="glyphicon glyphicon-envelope service-icon"></i> Invite!
						</h2>
						<p>{{ inviteResult }}</p>
						<div id="resultDivContainer"></div>
						<div class="btn-group">
							<button type="button submit" class="btn btn-default btn-lg" ng-click="sendInvite()">
							<span class="glyphicon glyphicon-envelope"></span> Send!</button>
						</div>
					</div>
					<div class="half-col">
		                <!-- Facebook like box -->
		                <div id="fb-root"><br><br></div>
		                <div class="fb-like-box well" data-href="https://www.facebook.com/TableForEightApp" data-colorscheme="light" data-show-faces="true" data-header="true" data-stream="false" data-show-border="true"></div>
					</div>
					</article>
				</section>

		</form>

		
	</div>
</main>
