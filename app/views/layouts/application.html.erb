    <head>
        <title>Table48 | thinkTecs</title>
        
      <!-- Meta -->
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta name="description" content="Table for Eight">
        <meta name="author" content="Julian Martin">
        <link rel="shortcut icon" href="favicon.ico">   
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
    </head>
    <body>
      <div class="content">
            <!-- Header -->
            <header class="mainheader">
                <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
                  <div class="container">
                    <!-- Brand and toggle get grouped for better mobile display -->
                    <div class="navbar-header">
                      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-datanavbar-collapsePanel">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                      </button>
                      <a class="navbar-brand" href="#"><img class="logo" src="/assets/Table-For-Eight-logo.png"></a> 
                    </div>
                
                    <!-- Collect the nav links, forms, and other content for toggling -->
                    <div class="collapse navbar-collapse" id="bs-datanavbar-collapsePanel">
                      <ul class="nav navbar-nav">
                        <li><a href="/events" class="scrollto">What?</a></li>
                        <li><a href="#people" class="scrollto">Who?</a></li>
                        <li><a href="#rest" class="scrollto">Where &amp; When?</a></li>
                        <li><a href="#invite" class="scrollto">Invite?</a></li>
                      </ul>
                    </div><!-- /.navbar-collapse -->
                  </div><!-- /.container-fluid -->
                </nav>
            </header>
            <!--/header-->
            <%= yield %>
            <footer>
              <p>Table For Eight &copy; Copyright 2014.</p>
            </footer>
        </div> 
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <script type="text/javascript">
            $('.form_datetime').datetimepicker({
                //language:  'fr',
                weekStart: 1,
                todayBtn:  1,
                autoclose: 1,
                todayHighlight: 1,
                startView: 2,
                forceParse: 0,
                showMeridian: 1
            });
            $('.form_date').datetimepicker({
                language:  'fr',
                weekStart: 1,
                todayBtn:  1,
                autoclose: 1,
                todayHighlight: 1,
                startView: 2,
                minView: 2,
                forceParse: 0
            });
            $('.form_time').datetimepicker({
                language:  'fr',
                weekStart: 1,
                todayBtn:  1,
                autoclose: 1,
                todayHighlight: 1,
                startView: 1,
                minView: 0,
                maxView: 1,
                forceParse: 0
            });
        </script>
                <script>
            $('#slider').cycle({
                fx : 'scrollVert',
                timeout: 3000,
                speed: 200,
                slides: '.slide'
            });

                        $('.navbar').waypoint('sticky');

                        $('.navbar a, a.scrollto, a#arrow_down').click(function(e){
                                $('html,body').scrollTo(this.hash, this.hash);
                                e.preventDefault();
                        });

                        $(function() {
                                Grid.init();
                        });
                </script> 
    </body>
</html>