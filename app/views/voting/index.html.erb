<section class="row" id="rest">
	<article class="subcontainer">
		<article class="col-md-6">
			<div class="service service-dark">
				<i class="glyphicon glyphicon-cutlery service-icon"></i>
				<div class="desc">
					<h2>Where?</h2>

					<% (1..5).each do |i| %>

					<div class="panel panel-default">
						<div class="panel-heading">
							Restaurant Title

							<div class="btn-group" style="float: right">
							  <button type="button" class="btn btn-default" >
							  	Yes <span class="glyphicon glyphicon-thumbs-up"></span>
							  </button>
							  <button type="button" class="btn btn-default">
							  	No <span class="glyphicon glyphicon-thumbs-down"></span>
							  </button>
							</div>

							<div class="panel-footer">
								<a href="#">Restaurant URL</a>
							</div>

						</div>
					</div>

					<% end %>

				</div>
			</div>	
		</article>
		<article class="col-md-6">
			<div class="service service-dark">
				<i class="glyphicon glyphicon-calendar service-icon"></i>
				<div class="desc">
					<h2>When?</h2>
					<% (1..3).each do |i| %>
					<div class="panel panel-default">
						<div class="panel-heading">

							<div class="btn-group" style="float: right">
							  <button type="button" class="btn btn-default">Yes <span class="glyphicon glyphicon-thumbs-up"></span></button>
							  <button type="button" class="btn btn-default">No <span class="glyphicon glyphicon-thumbs-down"></span></button>
							  <button type="button" class="btn btn-default">Maybe</button>
							</div>

							<div class="panel-footer">
								Date and Time
							</div>

						</div>
					</div>
					<% end %>
					<input type="hidden" id="dtp_input4" value="" />
				</div>
			</div>	
		</article>
	</article>
</section>